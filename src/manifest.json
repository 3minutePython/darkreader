{
    "manifest_version": 2,
    "name": "Dark Reader",
    "version": "4.0.0",
    "description": "Care your eyes, invert page colors, use dark theme for night and daily browsing.",
    "browser_action": {
        "default_title": "Dark Reader",
        "default_icon": "img/dr_active_38.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "img/dr_16.png",
        "48": "img/dr_48.png",
        "128": "img/dr_128.png"
    },
    "background": {
        "page": "background.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "inject.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "fontSettings",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "commands": {
        "toggle": {
            "suggested_key": {
                "default": "Alt+Shift+D"
            },
            "description": "Toggle On/Off"
        },
        "addSite": {
            "suggested_key": {
                "default": "Alt+Shift+C"
            },
            "description": "Toggle current site"
        }
    }
}